

<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">

      <div class="row form-group">
        <%= form.label :name, class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control", placeholder: "Please input name", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label :avatar, class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.file_field :avatar, class: "form-control" %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label :quantity, class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :quantity, class: "form-control", placeholder: "Please input quantity (number)", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label :price, class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.text_field :price, class: "form-control", placeholder: "Please input price ", required: true %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label :category_id, class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.select :category_id, options_for_select(Category.all.collect{|a| [a.name, a.id]}, food.category.present? ? food.category.id : ""), {include_blank: "-- Please select category --"}, {class: "form-control", required: true} %>
        </div>
      </div>

      <div class="row form-group">
        <%= form.label :restaurant_id, class: "col-sm-2 col-form-label input-label" %>
        <div class="col-sm-10">
          <%= form.select :restaurant_id, options_for_select(Restaurant.all.collect{|a| [a.name, a.id]}, food.restaurant.present? ? food.restaurant.id : ""), {include_blank: "-- Please select restaurant --"}, {class: "form-control", required: true} %>        </div>
      </div>

      <div class="d-flex justify-content-end">
        <%= form.submit "Save changes", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

