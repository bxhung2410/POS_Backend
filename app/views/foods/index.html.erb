
<div class="page-header">
  <div class="row align-items-center mb-3">
    <div class="col-sm mb-2 mb-sm-0">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-no-gutter">
          <li class="breadcrumb-item"><a class="breadcrumb-link" href="<%= root_path %>"><%= fa_icon("home") %></a></li>
          <li class="breadcrumb-item active" aria-current="page">Foods</li>
        </ol>
      </nav>

      <h1 class="page-header-title">Foods<span class="badge badge-soft-dark ml-2"><%= Food.all.size %></span></h1>
    </div>
    <div class="col-sm-auto">
      <%= link_to "Add Food", new_food_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-borderless card-table">
      <thead class="thead-light">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>quantity</th>
        <th>Price</th>
        <th>Category</th>
        <th>Restaurant</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.id %></td>
          <td>
            <%= image_tag food.avatar.url, width: "80px" if food.avatar.present? %>
            <%= food.name %>
          </td>
          <td><%= food.quantity %></td>
          <td><%= food.price %></td>
          <td><%= food.category.name if food.category.present? %></td>
          <td><%= food.restaurant.name if food.restaurant.present? %></td>
          <td><%= link_to 'Show', food %></td>
          <td><%= link_to 'Edit', edit_food_path(food) %></td>
          <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


