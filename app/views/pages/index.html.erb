<body class="page-catalog dm-dark">
<div class="page-wrapper">
  <%= render 'shared/header-home'%>
  <main class="page-main">

    <div class="section-banners">
      <div class="uk-section uk-container">
        <div class="uk-grid uk-grid-medium uk-child-width-1-1@m" data-uk-grid>
          <div>
            <div class="banner-card">
              <div class="banner-card__bg" style="background-image: url(banners/1.jpg)"></div>
              <div class="banner-card__box">
                <h4 class="banner-card__title">Get Your "Bún" In Your Style,<br> With 4 Simple Steps!</h4><a class="banner-card__phone" href="tel:13205448749"><i class="fas fa-phone-square"></i><span>Call us 1-320-544-8749</span></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="page-content">
      <div class="uk-container">
        <div data-uk-filter="target: .js-filter">
          <div class="catalog-filter-row">
            <ul class="uk-subnav">
              <li data-uk-filter-control=""><a href="#">All</a></li>
              <li class="uk-active" data-uk-filter-control="[data-tags='bún']"><a href="#">Bún</a></li>
              <li data-uk-filter-control="[data-tags='cơm - xôi']"><a href="#">Cơm - xôi</a></li>
              <li data-uk-filter-control="[data-tags='cháo - phở - hủ tiếu']"><a href="#">Cháo - phở - hủ tiếu</a></li>
              <li data-uk-filter-control="[data-tags='bánh']"><a href="#">Bánh</a></li>
              <li data-uk-filter-control="[data-tags='đồ uống']"><a href="#">Đồ uống</a></li>
            </ul><select class="uk-select" name="orderby" aria-label="Shop order">
            <option value="menu_order" selected>Sorting by</option>
            <option value="popularity">Sort by popularity</option>
            <option value="rating">Sort by average rating</option>
            <option value="date">Sort by latest</option>
            <option value="price">Sort by price: low to high</option>
            <option value="price-desc">Sort by price: high to low</option>
          </select>
          </div>
          <ul class="js-filter uk-grid uk-grid-small uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l" data-uk-grid>
            <% @foods.each do |food| %>
              <li data-tags="<%= food.category.name if food.category.present? %>">
                <div class="product-item">
                  <div class="product-item__box">
                    <div class="product-item__intro">
                      <div class="product-item__not-active">
                        <div class="product-item__media">
                          <div class="uk-inline-clip uk-transition-toggle uk-light" data-uk-lightbox="data-uk-lightbox" style="text-align: center" ><%= image_tag food.avatar.url if food.avatar.present? %></div>
                          <div class="product-item__whish"><i class="fas fa-heart"></i></div>
                          <div class="product-item__type spicy"></div>
                          <div class="product-item__tooltip" data-uk-tooltip="title: <%= food.name %>; pos: bottom-right"><i class="fas fa-info-circle"></i></div>
                        </div>
                        <div class="product-item__title"><a href="#"><%= food.name %></a></div>
                        <div class="product-item__desc">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eligendi, quibusdam.</div>
                      </div>
                    </div>
                    <div class="product-item__info">
                      <div class="product-item__price"> <span>Price: </span><span class="value">$<%= food.price %></span></div>
                      <div class="product-item__addcart"><%= link_to "Add to cart" , { controller: "pages", action: "show", id: food.id } , class: "uk-button uk-button-default", target: "_blank"%></div>
                    </div>
                  </div>
                </div>
              </li>

            <% end %>
          </ul>
          <div class="uk-margin-medium-top uk-text-center"><button class="uk-button" type="button">Load more </button></div>
        </div>
      </div>
    </div>
  </main>
  <%= render 'shared/footer-home'%>
</div>
</body>