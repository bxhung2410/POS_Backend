<div class="container py-5 py-sm-7">
  <a class="d-flex justify-content-center mb-5" href="<%= root_path %>">
    <%#= image_tag "logo.png", class: "z-index-2", style: "width: 5rem;" %>
  </a>

  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-5">
      <!-- Card -->
      <div class="card card-lg mb-5">
        <div class="card-body">
          <!-- Form -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render 'shared/message_html' %>

            <div class="text-center">
              <div class="mb-4">
                <h1 class="h2">Đăng nhập</h1>
                <p>Bạn chưa có tài khoản? <a href="<%= new_user_registration_path %>">Đăng ký ngay</a></p>
              </div>
            </div>

            <!-- Form Group -->
            <div class="js-form-message form-group">
              <label class="input-label">Tài khoản hoặc email của bạn</label>
              <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div class="js-form-message form-group">
              <label class="input-label" for="signupSrPassword" tabindex="0">
                        <span class="d-flex justify-content-between align-items-center">
                          Mật khẩu
                          <a class="input-label-secondary" href="authentication-reset-password-basic.html">Quên mật khẩu?</a>
                        </span>
              </label>

              <div class="input-group input-group-merge">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
            <!-- End Form Group -->

            <!-- Checkbox -->
            <div class="form-group">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="user_remember_me" name="user[remember_me]'">
                <label class="custom-control-label text-muted" for="user_remember_me"> Ghi nhớ tài khoản</label>
              </div>
            </div>

            <button type="submit" class="btn btn-lg btn-block btn-primary">Đăng nhập</button>
          <% end %>
          <!-- End Form -->
        </div>
      </div>
      <!-- End Card -->
    </div>
  </div>
</div>